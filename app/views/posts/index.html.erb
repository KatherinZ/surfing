<section class="main section" id="main-post">
  <%= render "promo/navbar" %>
  <div class="main__content main__content-blog">
    <div class="main__content-blog__text">
      <h1>Блог</h1>
    </div>
    <div class="main__content-blog__pic">
      <%= image_tag("blog-main-pic.png", :class => "blog-pic") %>
    </div>
  </div>
</section>

<p id="notice"><%= notice %></p>


<div class="top">
  <%= link_to 'создать пост', new_post_path, :class => "create-post" %>
</div>


<table>
  <!-- <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Author</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead> -->
  <tbody class="posts">
    <% @posts.each do |post| %>
      <tr class="posts__item">
        <td><%= image_tag( post.image.thumb.url, alt: 'Image' , :class => "posts__item__img") %></td>
        <td class="posts__item__text posts__item__text-theme"><%= post.name %></td>
        <td class="posts__item__text posts__item__text-title"><%= post.title %></td>
        <!-- <td class="posts__item__text">
          <%= post.author %>
        </td> -->
        <!-- <td class="posts__item__text"><%= post.content %></td> -->
        <td class="posts__item__links">
          <%= link_to 'Читать', post, :class =>"link" %>
          <%= link_to '🖊️', edit_post_path(post), :class =>"link" %>
          <%= link_to '🗑️', post, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"link" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
