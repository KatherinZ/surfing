<div class="one-post">
  <div class="one-post__block">
    <%= render "promo/navbar" %>
  </div>

  <div class="view-post">
    <p class="view-post__name">
     <%= @post.name %>
   </p>
    <div class="view-post__img">
      <%= image_tag(@post.image.url, alt: 'Image', :class => "post-pic" ) if @post.image? %>
    </div>

